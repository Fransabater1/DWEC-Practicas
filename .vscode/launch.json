    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome (open client)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000/prueba.html",
            "webRoot": "${workspaceFolder}/POO/Biblioteca/cliente"
        },
        {
            "name": "Launch Server (Node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/POO/Biblioteca/servidor/server.js",
            "cwd": "${workspaceFolder}/POO/Biblioteca/servidor",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Attach to Server",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": false,
            "localRoot": "${workspaceFolder}/POO/Biblioteca/servidor",
            "remoteRoot": null
        }
    ]
}